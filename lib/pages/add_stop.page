import 'package:flutter/material.dart';
import 'package:google_maps_flutter/google_maps_flutter.dart';

class AddStopMapPage extends StatefulWidget {
  const AddStopMapPage({super.key});

  @override
  State<AddStopMapPage> createState() => _AddStopMapPageState();
}

class _AddStopMapPageState extends State<AddStopMapPage> {
  late GoogleMapController mapController;
  LatLng center = const LatLng(23.0225, 72.5714); // Default to Ahmedabad

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      backgroundColor: Colors.black,
      body: SafeArea(
        child: Stack(
          children: [
            GoogleMap(
              initialCameraPosition: CameraPosition(
                target: center,
                zoom: 14,
              ),
              onMapCreated: (controller) => mapController = controller,
              mapType: MapType.normal,
              myLocationEnabled: true,
              myLocationButtonEnabled: true,
              zoomControlsEnabled: false,
              onCameraMove: (position) {
                center = position.target;
              },
            ),

            // Center Pin
            const Center(
              child: Icon(Icons.location_on, size: 40, color: Colors.redAccent),
            ),

            // Top Bar with Fields
            Positioned(
              top: 16,
              left: 16,
              right: 16,
              child: Column(
                children: [
                  _stopField("Ahmedabad"),
                  const SizedBox(height: 8),
                  _stopField("Add a stop"),
                  const SizedBox(height: 8),
                  _stopField("Add a stop"),
                ],
              ),
            ),
          ],
        ),
      ),
    );
  }

  Widget _stopField(String hint) {
    return Container(
      padding: const EdgeInsets.symmetric(horizontal: 12),
      decoration: BoxDecoration(
        color: Colors.grey[850],
        borderRadius: BorderRadius.circular(6),
      ),
      child: TextField(
        enabled: false,
        style: const TextStyle(color: Colors.white),
        decoration: InputDecoration(
          hintText: hint,
          hintStyle: const TextStyle(color: Colors.white54),
          border: InputBorder.none,
        ),
      ),
    );
  }
}
